{
  "name": "LLM Dev Container",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "llm_app",
  "workspaceFolder": "/app",
  "extensions": [
    "ms-python.python",              // Python 支援擴展
    "ms-toolsai.jupyter",            // Jupyter 支援擴展
    "ms-vscode-remote.remote-containers" // Dev Containers 支援擴展
  ],
  "settings": {
    "python.defaultInterpreterPath": "/opt/conda/bin/python", // PyTorch 映像的預設 Python 路徑
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind"
  ],
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "shutdownAction": "stopCompose"
}
